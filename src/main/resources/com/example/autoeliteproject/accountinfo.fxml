<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="black-bg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <fx:include source="navbar_loggedin.fxml" />
            <fx:include source="navbar-account.fxml" />
         </children></VBox>
   </top>
   <center>
      <HBox alignment="TOP_CENTER" fillHeight="false" spacing="30.0" stylesheets="@style.css">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="400.0" prefWidth="238.0" spacing="20.0">
               <children>
                  <ImageView fitHeight="124.0" fitWidth="158.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/usericon.png" />
                     </image>
                  </ImageView>
                  <TextField promptText="First Name" styleClass="text-field-accountinfo" stylesheets="@style.css" />
                  <TextField promptText="Username" styleClass="text-field-accountinfo" stylesheets="@style.css" />
                  <TextField promptText="Email Address" styleClass="text-field-accountinfo" stylesheets="@style.css" />
                  <Button mnemonicParsing="false" styleClass="delete-account-button" stylesheets="@style.css" text="Log Out" />
               </children>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="400.0" prefWidth="234.0" spacing="20.0">
               <children>
                  <ImageView fitHeight="124.0" fitWidth="158.0" pickOnBounds="true" preserveRatio="true" />
                  <TextField promptText="Last Name" styleClass="text-field-accountinfo" stylesheets="@style.css" />
                  <PasswordField promptText="Password" styleClass="text-field-accountinfo" stylesheets="@style.css" />
                  <TextField promptText="Phone Number" styleClass="text-field-accountinfo" stylesheets="@style.css" />
                  <Button mnemonicParsing="false" styleClass="update-account-button" stylesheets="@style.css" text="Update" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
