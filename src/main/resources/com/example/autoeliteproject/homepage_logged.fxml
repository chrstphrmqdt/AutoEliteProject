<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="background-image" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.autoeliteproject.homeController">
   <top>
      <VBox prefHeight="0.0" prefWidth="1605.0" BorderPane.alignment="CENTER">
         <children>
            <fx:include source="infotop.fxml" />
            <fx:include source="navbar_logged.fxml" />
         </children></VBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" spacing="30.0">
         <children>
            <Label alignment="CENTER" text="Find Your Dream Car" textFill="WHITE">
               <font>
                  <Font name="Century Gothic Bold" size="100.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Label alignment="CENTER" text="Discover the Perfect Ride That Defines You" textFill="WHITE">
               <font>
                  <Font name="Century Gothic" size="27.0" />
               </font>
            </Label>
            <Button fx:id="searchcarsBtn" mnemonicParsing="false" onAction="#searchcarsBtn" styleClass="button-explorenow" stylesheets="@style.css" text="Search">
               <font>
                  <Font name="Century Gothic Bold" size="28.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <graphic>
                  <ImageView fitHeight="27.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/icons/search_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
