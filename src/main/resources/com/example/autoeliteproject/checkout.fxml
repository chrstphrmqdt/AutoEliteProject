                                    <VBox alignment="CENTER_LEFT">
                                       <children>
                                          <Label text="Total">
                                             <font>
                                                <Font size="24.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                    <VBox alignment="CENTER_LEFT">
                                       <children>
                                          <Label fx:id="totalprice" text="00.0">
                                             <font>
                                                <Font name="System Bold Italic" size="14.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
